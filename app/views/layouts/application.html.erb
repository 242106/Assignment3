<!DOCTYPE html>
<html>
  <head>

    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
         <div class="container">

           <% if user_signed_in? %>
             <div>
               <%= link_to "Home", user_path(current_user.id) %>
                <i class="fas fa-home" style="color: #ffffff;"></i>
                <p class="text-white bg-dark">.text-white</p>
             </div>
             <div>
               <%= link_to "Users", users_path, method: :delete %>
                <i class="fas fa-users" style="color: #ffffff;"></i>
             </div>
             <div>
               <%= link_to "Books", books_path, method: :delete %>
                <i class="fas fa-book-open" style="color: #ffffff;"></i>
             </div>

             <div>
               <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                <i class="fas fa-sign-out-alt" style="color: #ffffff;"></i>
             </div>
           <% else %>
             <div>
               <%= link_to "Home", root_path %>
                <i class="fas fa-home" style="color: #ffffff;"></i>
             </div>
             <div>
               <%= link_to "About", home_about_path %>
                <i class="fas fa-link" style="color: #ffffff;"></i>
             </div>
             <div>
               <%= link_to "Sign up", new_user_registration_path %>
                <i class="fas fa-user-plus" style="color: #ffffff;"></i>
             </div>
             <div>
               <%= link_to "Log in", new_user_session_path %>
                <i class="fas fa-sign-in-alt" style="color: #ffffff;"></i>
             </div>
           <% end %>
          </div>
         </nav>
      </header>
    <%= yield %>
  </body>
</html>
